<Window x:Class="Server.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server.UI"
        mc:Ignorable="d"
        Title="Server" Height="450" Width="800">

    <Window.Resources>
        <!-- LogsTemplate -->
        <DataTemplate x:Key="LogsListTemplate">
            <ListBox ItemsSource="{Binding Logs}" 
             Height="300"
             FontFamily="Consolas"
             Background="Black"
             BorderThickness="1"
             ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="[{0:HH:mm:ss}] [{1}] {2}">
                                    <Binding Path="Timestamp"/>
                                    <Binding Path="LogLevel"/>
                                    <Binding Path="Message"/>
                                </MultiBinding>
                            </TextBlock.Text>
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="Gray"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding LogLevel}" Value="Debug">
                                            <Setter Property="Foreground" Value="BlueViolet"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding LogLevel}" Value="Info">
                                            <Setter Property="Foreground" Value="CornflowerBlue"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding LogLevel}" Value="Warning">
                                            <Setter Property="Foreground" Value="Orange"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding LogLevel}" Value="Error">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding LogLevel}" Value="Critical">
                                            <Setter Property="Foreground" Value="DarkRed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </DataTemplate>

        <!-- ServerTemplate -->
        <DataTemplate x:Key="ServerTemplate">
            <StackPanel Margin="10">
                <TextBlock Text="{Binding Info}" FontWeight="Bold" Foreground="DarkBlue"/>
                <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource LogsListTemplate}"/>
            </StackPanel>
        </DataTemplate>

        <!-- LobbyTemplate -->
        <DataTemplate x:Key="LobbyTemplate">
            <StackPanel Margin="10">
                <TextBlock Text="{Binding LobbyID, StringFormat=Lobby #{0}}" FontWeight="Bold" Foreground="LawnGreen"/>
                <TextBlock Text="{Binding Info}" FontWeight="Bold" Foreground="LawnGreen"/>
                <ContentPresenter Content="{Binding}" ContentTemplate="{StaticResource LogsListTemplate}"/>
            </StackPanel>
        </DataTemplate>

        <!-- Selector -->
        <local:TabTemplateSelector x:Key="MyTabSelector"
                                   ServerTemplate="{StaticResource ServerTemplate}"
                                   LobbyTemplate="{StaticResource LobbyTemplate}"/>
    </Window.Resources>

    <Grid>
        <TabControl ItemsSource="{Binding Tabs}" ContentTemplateSelector="{StaticResource MyTabSelector}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" FontWeight="Bold"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </Grid>
</Window>
